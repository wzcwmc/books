<form action="AddBookServlet" method="post" enctype="multipart/form-data">
<div id="content" class="white">
	<h1><img src="img/icons/posts.png" alt="" /> 增加图书</h1>
	<div class="bloc">
		<div class="title">书单</div>
		<div class="content">
			<div class="" style="float:left; margin: 0px 50px auto auto">
				<label id="imglab" title="上传封面图像" class="loadfile" for="uploadfile" >书的封面</label>
				<div  style="display:none;"><input type="file" id="uploadfile" name="bookImg"/></div>
				
			</div>
			<div class="input" style="margin-left:260px ">
				<label for="input1">书名</label>
				<input type="text" id="input1" name="bookName"/>
			</div>
			
			<div class="input" style="margin-left:260px ">
				<label for="input2">作者</label>
				<input type="text" id="input2" name="author"/>
			</div>
			
			<div class="input" style="margin-left:260px ">
				<label for="input3">版本号</label>
				<input type="text" id="input3" name="isbn"/>
			</div>
			<div class="input" style="margin-left:260px ">
				<label for="input4">出版社</label>
				<input type="text" id="input4" name="publisher"/>
			</div>
			
			<div class="input" style="margin-left:260px ">
				<label for="input5">出版日期</label>
				<input type="text" style="width:156px" 
				onFocus="WdatePicker({isShowClear:false,readOnly:true})" id="input5" name="pubDate"/>
			</div>
			
			<div class="input" style="margin-left:260px ">
				<label for="select">图书类型</label>
				<select id="select" style="width:158px" name="bookType">
					<option value="童话">童话</option>
					<option value="哲学">哲学</option>
					<option value="军事">军事</option>
				</select></div>
				
			<div class="input textarea">
				<label for="textarea2">图书介绍</label>
				<textarea id="textarea2" rows="7" class="wysiwyg" cols="4" name="introduction">
                	图书简介
            	</textarea>
			</div>
			<div class="input">
				<label>图书价格 : $<span></span></label>
				<input type="text" class="range min-10 max-150" value="50" name="price"/>
			</div>
			
			<div class="input">
				<label for="input6">书的数量</label>
				<input type="text" id="input6" name="bookNum"/>
			</div>
			
			
			
			<div class="submit">
				<input type="submit" value="  提交   " />
			</div>

			
		</div>
		</div>
		</div>
		</form>


<script type="text/javascript">
			$(function(){
				$("#uploadfile").change(function(){
					var fr=new FileReader();
					fr.readAsDataURL(document.getElementById("uploadfile").files[0]);
					fr.onload=function(e){
					
						$("#imglab").addClass("bg_size");
						$("#imglab").css("background-image","url(" + e.target.result + ")");
/* 						$("#imglab").css("width","200px");
						$("#imglab").css("height","50px"); */
						$("#imglab").html('');
					};
				});
			});
</script>
