<script type="text/javascript">

	//页容量
	var pageSize1=5;
	var pageSize2=8;
	//总页数
	var pageCount1;
	var pageCount1;

	$(function(){
	//获取总页数
   	getPageCounts();
   	
		$.ajax({
			url:"WelcomeServlet?type=manger",
			data:"",
			type:"post",
			datatype:"text",
			success: function(result) {
				$(".user").html(result);
			}
		});
		
		
	});

   function getPageCounts(){
   	var jsonStr1={pSize1:pageSize1};
   	var jsonStr2={pSize2:pageSize2};
   	$.post("GetPageCountServlet?type=book",
   			jsonStr1,
   			function(data) {
   				var str=$.parseJSON(data);
   				pageCount1=str.pcount;
   				/*调用进行分页的方法*/
    			setPages1();
   			});
   	
   	$.post("GetPageCountServlet?type=reader",
   			jsonStr2,
   			function(data) {
   				var str=$.parseJSON(data);
   				pageCount2=str.pcount;
   				/*调用进行分页的方法*/
    			setPages2();
   			});
   }
   /*分页的函数*/
   function setPages1(){
   	$(".page1").paginate({
    			count : pageCount1, //${6}此处要写清本次分页的总页数,不支持动态改变,不可写非int型数.个人建议在进入页面的时候就把页数传过来
    			start : 1, //开始页码,从1开始,一般设置成1
    			display : 6, //在分页条上显示的个数,分页数等于或超过本设置会显示设置的个数,不够的话会显示真实个数,不过就不会出现滚动效果了.
    			border : false, //是否显示外框
    			text_color : '#888', //文字颜色
    			background_color : '#EEE', //背景颜色
    			text_hover_color : 'black', //鼠标放上去时文字的颜色
    			background_hover_color : '#CFCFCF',//鼠标放上去时背景的颜色
    			rotate : true, //是否滚动
    			images : false, //
    			mouse : 'press', //可选值为'press'和'slide',具体差别请自己体验.
    			onChange : function(page) {//本插件唯一可触发的事件,在点击页数的时候触发,只传过来当前被选中的页数,我想这其实足够了.
    				getPageData1(page, pageSize1);
    			}
    		});
    		//调用ajax异步实现每页的数据
    		getPageData1(1, pageSize1);
   }
   
    function setPages2(){
   	$(".page2").paginate({
    			count : pageCount2, //${6}此处要写清本次分页的总页数,不支持动态改变,不可写非int型数.个人建议在进入页面的时候就把页数传过来
    			start : 1, //开始页码,从1开始,一般设置成1
    			display : 6, //在分页条上显示的个数,分页数等于或超过本设置会显示设置的个数,不够的话会显示真实个数,不过就不会出现滚动效果了.
    			border : false, //是否显示外框
    			text_color : '#888', //文字颜色
    			background_color : '#EEE', //背景颜色
    			text_hover_color : 'black', //鼠标放上去时文字的颜色
    			background_hover_color : '#CFCFCF',//鼠标放上去时背景的颜色
    			rotate : true, //是否滚动
    			images : false, //
    			mouse : 'press', //可选值为'press'和'slide',具体差别请自己体验.
    			onChange : function(page) {//本插件唯一可触发的事件,在点击页数的时候触发,只传过来当前被选中的页数,我想这其实足够了.
    				getPageData2(page, pageSize2);
    			}
    		});
    		//调用ajax异步实现每页的数据
    		getPageData2(1, pageSize2);
   }
   
   
   function getPageData1(pageIndex,pageSize){
    		var jsonStr={
    				start : pageIndex,
    				pageSize : pageSize,
    			};
    		$.ajax({
    			url : "PageServlet?type=book",
    			type : "post",
    			data : jsonStr,
    			dataType : "json",
    			timeout : 100000,
    			error : function() {
    				alert('请求超时，请稍候再试');
    			},
    			success : function(result) {
    				var s = new StringBuffer();
    				$.each(result, function(index, value) {
    					s.append("<tr>").append("<td>").append((index + 1)).append(
    							"</td>").append("<td class='picture' style='width:140px;'>");
    					s.append("<a href='#' class='zoombox'>").append("<img src='");
    					s.append(value.bookImg).append("' style='width:90px;height:100px' alt='' /></a></td>").append("<td>");
    					s.append(value.bookName).append("</td>").append("<td>");
    					s.append(value.author).append("</td>").append("<td>");
    					s.append(value.publisher).append("</td>").append("<td>");
    					s.append(value.bookType).append("</td>").append("<td>");
    					s.append(value.bookNum).append("</td>").append("<td>");
    					s.append(value.lendNum).append("</td>").append("<td>");
    					s.append(value.nowNum).append("</td>").append("<td>");
    					s.append("<a title='编辑修改'><img src='img/icons/actions/edit.png' onclick='showBook("+value.bookId+")'/></a>&nbsp;&nbsp;");
    					s.append("<a id='delbook"+index+"' title='删除'><img src='img/icons/actions/delete.png' onclick='delBook("+value.bookId+","+index+","+value.bookName+")' /></a>");
    					s.append("</td>").append("</tr>");
    				});
    				$(".btbody1").html(s.toString());
    			}
    		});
    	}
    	
    	function getPageData2(pageIndex,pageSize){
    		var jsonStr={
    				start : pageIndex,
    				pageSize : pageSize,
    			};
    		$.ajax({
    			url : "PageServlet?type=reader",
    			type : "post",
    			data : jsonStr,
    			dataType : "json",
    			timeout : 100000,
    			error : function() {
    				alert('请求超时，请稍候再试');
    			},
    			success : function(result) {
    				var s = new StringBuffer();
    				$.each(result, function(index, value) {
    					s.append("<tr>").append("<td>").append((index + 1)).append(
    							"</td>").append("<td>");
    					s.append(value.loginId).append("</td>").append("<td>");
    					s.append(value.reaName).append("</td>").append("<td>");
    					s.append(value.gender).append("</td>").append("<td>");
    					var birthday= toDates(value.birthday.time);
    					s.append(birthday.getFullYear()+"-").append(birthday.getMonth()+1+"-").append(birthday.getDate());
    					s.append("</td>").append("<td>");
    					s.append(value.address).append("</td>").append("<td>");
    					s.append(value.phone).append("</td>").append("<td>");
    					s.append("<a title='编辑修改'><img src='img/icons/actions/edit.png' onclick=showReader('"+value.loginId+"') /></a>&nbsp;&nbsp;");
    					s.append("<a id='delreader"+index+"' title='删除'><img src='img/icons/actions/delete.png' onclick='delReader("+value.reaId+","+index+")' /></a>");
    					s.append("</td>").append("</tr>");
    				});
    				$(".btbody2").html(s.toString());
    			}
    		});
    	}
    	
    function toDates(dateStr){
	 //js 日期格式
	 var newTime = new Date(dateStr); 
	 return newTime;//返回js日期格式
  	}
    	
    	function StringBuffer() {
    		this.__string__ = new Array();
    	}
    	StringBuffer.prototype.append = function(str) {
    		this.__string__.push(str);
    		return this;
    	};
    	StringBuffer.prototype.toString = function() {
    		return this.__string__.join("");
    	};
	
	function showBook(bookId){
		layer.open({
			type : 2,
			title : '更新信息',
			shadeClose : true,
			shade : 0.5,
			area : [ '650px', '600px' ],
			content : 'UpdateServlet?type=book&bookId='+bookId, //iframe的url
			end: function(){  
	     		// 如果是通过单击关闭按钮关闭弹出层，父画面没有此表单  
				if($("#popupForm").length === 1){  
					$("#popupForm").submit();  
					}  
			}
			
		});
	}

	function showReader(loginId){
		layer.open({
			type : 2,
			title : '更新信息',
			shadeClose : true,
			shade : 0.5,
			area : [ '650px', '510px' ],
			content : 'UpdateServlet?type=reader&loginId='+loginId, //iframe的url
			end: function(){  
	     		// 如果是通过单击关闭按钮关闭弹出层，父画面没有此表单  
				if($("#popupForm1").length === 1){  
					$("#popupForm1").submit();  
					}  
			}
			
		});
	}
	
	function delBook(bookId,index,bookName){
	var str="#delbook"+index;
		$.ajax({
    			url : "CheckServlet?type=book&bookId="+bookId,
    			type : "post",
    			data : "",
    			dataType : "text",
    			timeout : 10000,
    			error : function() {
    				alert('请求超时，请稍候再试');
    			},
    			success : function(result) {
    				var isOk=result;
    				if(isOk != "ok"){
    					layer.tips('该书尚有外借记录，不可删除！', str);
    				}else{
    					var del = confirm("你确认要删除 " + bookId + " 号图书 《" + bookName + "》 吗？");
    					if (del) {
    						$.ajax({
				    			url : "DoDelete?type=book&bookId=" + bookId,
				    			type : "post",
				    			data : "",
				    			dataType : "text",
				    			timeout : 10000,
				    			error : function() {
				    				alert('请求超时，请稍候再试');
				    			},
				    			success : function(result) {
				    				var isOk=result;
				    				if(isOk=="ok"){
				    					getPageCounts();
				    				}
				    			}
							});
						}
    				}
    			}
    	});
	}
	function delReader(reaId,index){
		var str = "#delreader"+index;
		$.ajax({
    			url : "CheckServlet?type=reader&reaId="+reaId,
    			type : "post",
    			data : "",
    			dataType : "text",
    			timeout : 10000,
    			error : function() {
    				alert('请求超时，请稍候再试');
    			},
    			success : function(result) {
    				var isOk=result;
    				if(isOk!="ok"){
    					layer.tips('该读者尚有借书记录，不可删除！', str);
    				}else{
    					layer.tips('可以删除', str);
    				}
    			}
    	});
	}

</script>

